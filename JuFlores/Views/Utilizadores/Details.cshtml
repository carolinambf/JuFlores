@model JuFlores.Models.Utilizadores

@{
    ViewData["Title"] = "Detalhes do utilizador";
    List<Microsoft.AspNetCore.Identity.IdentityUserRole<string>> userRoles = (List<Microsoft.AspNetCore.Identity.IdentityUserRole<string>>)ViewData["UserRoles"];
}

<h1>@ViewData["Title"]</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Morada)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Morada)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
        <dt class="col-sm-2">
            Role
        </dt>
        <dd class="col-sm-10">
            @{
                var role = userRoles.Where(userRole => userRole.UserId == Model.Id).FirstOrDefault();
                var str = "";
                @if (role != null)
                {
                    switch (role.RoleId)
                    {
                        case "a":
                            str += "Administrador ";
                            break;
                        case "f":
                            str += "Funcionário ";
                            break;
                        case "c":
                            str += "Cliente ";
                            break;
                    }
                }
                @str
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Editar</a> |
    <a asp-action="Index">Voltar à lista</a>
</div>
